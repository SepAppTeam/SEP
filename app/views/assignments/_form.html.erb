<%= simple_form_for @assignment, :html => { :class => 'form-horizontal' } do |f| %>

<%= f.collection_select :user_id , User.all, :id, :username, :prompt => "Selecione Usuario" %>
</br></br>
<%= f.collection_select :role_id , Role.all, :id, :name, :prompt => "Selecione Roles" %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                assignments_path, :class => 'btn' %>
  </div>
<% end %>
