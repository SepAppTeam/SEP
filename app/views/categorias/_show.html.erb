<div class="modal-header">
  <button  class="close" onclick="$.lazybox.close()">&times;</button>
  <h3>Categorias</h3>
</div>
  <div class="modal-body">
    <table class="table table-striped table-condensed">
      <tr>
        <td><b class="pull-right">ID: </b></td>
        <td><%= @categoria.id %></td>
      </tr>
      <tr>
        <td><b class="pull-right">Nombre: </b></td>
        <td><%= @categoria.nombre %></td>
      </tr>
      <tr>
        <td><b class="pull-right">Siglas: </b></td>
        <td><%= @categoria.descripcion %></td>
      </tr>
    </table>
    <div class="modal-footer">
      <a onclick="$.lazybox.close()">&times;</a>
    </div>           
  </div>


